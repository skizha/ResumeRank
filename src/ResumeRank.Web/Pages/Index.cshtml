@page
@model IndexModel
@{
    ViewData["Title"] = "Jobs";
}

<div class="job-header" style="border-bottom: none; padding-bottom: 0;">
    <h1 class="job-title">Open Positions</h1>
    <p class="job-description" style="margin-top: 0.5rem;">Select a job to view details, upload resumes, and rank candidates.</p>
</div>

<table class="table-swiss">
    <thead>
        <tr>
            <th>Title</th>
            <th>Department</th>
            <th>Experience</th>
            <th>Location</th>
            <th style="width: 100px;">Resumes</th>
            <th style="width: 80px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td class="candidate-name">@job.Title</td>
                <td>@job.Department</td>
                <td>@job.ExperienceLevel</td>
                <td>@job.Location</td>
                <td>
                    <span class="score-secondary">@Model.ResumeCounts[job.Id]</span>
                </td>
                <td>
                    <a asp-page="/Jobs/Detail" asp-route-id="@job.Id" class="btn btn-ghost btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
