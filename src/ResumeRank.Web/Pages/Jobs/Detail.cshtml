@page "{id}"
@model ResumeRank.Web.Pages.Jobs.DetailModel
@{
    ViewData["Title"] = Model.Job.Title;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Jobs</a></li>
        <li class="breadcrumb-item active">@Model.Job.Title</li>
    </ol>
</nav>

<h1>@Model.Job.Title</h1>
<div class="row mb-4">
    <div class="col-md-8">
        <p class="text-muted">
            <strong>Department:</strong> @Model.Job.Department |
            <strong>Experience:</strong> @Model.Job.ExperienceLevel |
            <strong>Location:</strong> @Model.Job.Location
        </p>
        <p style="white-space: pre-line">@Model.Job.Description</p>
    </div>
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">Required Skills</div>
            <div class="card-body">
                @foreach (var skill in Model.Job.RequiredSkills)
                {
                    <span class="badge bg-primary me-1 mb-1">@skill</span>
                }
            </div>
        </div>
        <div class="card">
            <div class="card-header">Preferred Skills</div>
            <div class="card-body">
                @foreach (var skill in Model.Job.PreferredSkills)
                {
                    <span class="badge bg-info me-1 mb-1">@skill</span>
                }
            </div>
        </div>
    </div>
</div>

<hr />

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Resumes (@Model.Resumes.Count)</h2>
    <div>
        <a asp-page="/Jobs/Upload" asp-route-id="@Model.Job.Id" class="btn btn-primary me-2">Upload Resumes</a>
        @if (Model.Resumes.Count > 0)
        {
            <form method="post" asp-page-handler="Rank" asp-route-id="@Model.Job.Id" class="d-inline">
                <button type="submit" class="btn btn-success">Rank Resumes</button>
            </form>
        }
    </div>
</div>

@if (Model.Resumes.Count == 0)
{
    <div class="alert alert-info">No resumes uploaded yet. Upload resumes to get started.</div>
}
else
{
    <table class="table table-sm">
        <thead class="table-light">
            <tr>
                <th>Candidate</th>
                <th>File</th>
                <th>Suitable Roles</th>
                <th>Uploaded</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resume in Model.Resumes)
            {
                var suitableRoles = Model.ResumeSuitableRoles.GetValueOrDefault(resume.Id, new List<ResumeRank.Web.Models.SuitableRole>());
                <tr>
                    <td>@resume.CandidateName</td>
                    <td>@resume.FileName</td>
                    <td>
                        @if (suitableRoles.Any())
                        {
                            @foreach (var role in suitableRoles.Take(4))
                            {
                                var badgeClass = role.Score >= 8 ? "bg-success"
                                               : role.Score >= 5 ? "bg-warning text-dark"
                                               : role.Score > 0 ? "bg-danger"
                                               : "bg-secondary";
                                <span class="badge @badgeClass me-1 mb-1" title="Suitability: @role.Score/10">
                                    @role.Role
                                    @if (role.Score > 0)
                                    {
                                        <span class="ms-1">(@role.Score)</span>
                                    }
                                </span>
                            }
                            @if (suitableRoles.Count > 4)
                            {
                                var remainingRoles = suitableRoles.Skip(4).ToList();
                                var popoverContent = string.Join("", remainingRoles.Select(r => {
                                    var cls = r.Score >= 8 ? "bg-success" : r.Score >= 5 ? "bg-warning text-dark" : r.Score > 0 ? "bg-danger" : "bg-secondary";
                                    var scoreText = r.Score > 0 ? $" ({r.Score})" : "";
                                    return $"<span class='badge {cls} me-1 mb-1'>{r.Role}{scoreText}</span>";
                                }));
                                <a href="#" class="text-muted small" tabindex="0" role="button"
                                   data-bs-toggle="popover" data-bs-trigger="focus" data-bs-html="true"
                                   data-bs-title="More Suitable Roles" data-bs-content="@popoverContent">
                                    +@(suitableRoles.Count - 4) more
                                </a>
                            }
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>@resume.UploadedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Job.Id" asp-route-resumeId="@resume.Id" class="d-inline" onsubmit="return confirm('Delete this resume?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (Model.Rankings.Count > 0)
{
    <hr />
    <h2>Rankings</h2>
    <table class="table table-striped">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Candidate</th>
                <th>Overall</th>
                <th>Skill Match</th>
                <th>Experience Match</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @{ var rank = 1; }
            @foreach (var result in Model.Rankings)
            {
                <tr>
                    <td>@rank</td>
                    <td>@result.Resume.CandidateName</td>
                    <td><strong>@result.OverallScore</strong></td>
                    <td>@result.SkillMatchScore</td>
                    <td>@result.ExperienceMatchScore</td>
                    <td>@result.Summary</td>
                </tr>
                rank++;
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl);
            });
        });
    </script>
}
