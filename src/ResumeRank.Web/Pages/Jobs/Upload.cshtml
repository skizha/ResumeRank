@page "{id}"
@model ResumeRank.Web.Pages.Jobs.UploadModel
@{
    ViewData["Title"] = $"Upload Resumes - {Model.Job.Title}";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Jobs</a></li>
        <li class="breadcrumb-item"><a asp-page="/Jobs/Detail" asp-route-id="@Model.Job.Id">@Model.Job.Title</a></li>
        <li class="breadcrumb-item active">Upload</li>
    </ol>
</nav>

<h1>Upload Resumes</h1>
<p class="text-muted">Upload resume files for <strong>@Model.Job.Title</strong>. Accepted formats: PDF, DOCX.</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="files" class="form-label">Select Files</label>
        <input type="file" class="form-control" id="files" name="Files" multiple accept=".pdf,.docx" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
    <a asp-page="/Jobs/Detail" asp-route-id="@Model.Job.Id" class="btn btn-outline-secondary ms-2">Cancel</a>
</form>
